<!doctype html>
<html lang="en">
	<head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Template â€¢ TodoMVC</title>
        <link rel="stylesheet" type="text/css" href="node_modules/todomvc-common/base.css">
        <link rel="stylesheet" type="text/css" href="node_modules/todomvc-app-css/index.css">
        <link rel="stylesheet" type="text/css" href="css/app.css">
        <base herf='/'>
    </head>
	<body>
		<section class="todoapp">
            <header class="header">
                <h1>todos</h1>
                <form method="post" action="/add" >
                    <input
                        class="new-todo"
                        placeholder="What needs to be done?"
                        autofocus
                        type="text"
                        name="todoItem"
                    ></input>
                </form>
            </header>
			<section class="main" style="display: <%= todo.length > 0 ? "block":"none" %>;">
                <%- include('../partials/toggleAll'); %>
                <%- include('../partials/todoList'); %>
			</section>
			<footer class="footer" style="display: <%= todo.length > 0 ? "block":"none" %>;">
                <span class="todo-count">
                    <strong><%= todo.filter(item => !item.completed).length %></strong> item left
                </span>
                <ul class="filters">
                    <li>
                        <a href="/" <%= type==='all' ? 'class=selected':'' %>>All</a>
                    </li>
                    <li>
                        <a href="/active" <%= type==='active' ? 'class=selected':'' %>>Active</a>
                    </li>
                    <li>
                        <a href="/completed" <%= type==='completed' ? 'class=selected':'' %>>Completed</a>
                    </li>
                </ul>
                <%- include('../partials/clearCompleted'); %>
            </footer>
		</section>
        <script type="text/javascript" src="/js/app.js"></script>
	</body>
</html>
